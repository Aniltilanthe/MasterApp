<html>
<head>
  <title>Medicos</title>
  <!-- css -->
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">


  <!--external scripts -->
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

  <script src="/javascripts/angularApp.js"></script>

  <!--Services  -->
  <script src="/javascripts/services/physicians.js"></script>
  <script src="/javascripts/services/posts.js"></script>
  <script src="/javascripts/services/auth.js"></script>

  <!--Controllers -->
  <script src="/javascripts/controllers/AuthCtrl.js"></script>
  <script src="/javascripts/controllers/NavCtrl.js"></script>
  <script src="/javascripts/controllers/PostsCtrl.js"></script>
  <script src="/javascripts/controllers/APostCtrl.js"></script>

</head>

<body ng-app="Medicos" ng-controller="MainCtrl">
  <nav class="navbar navbar-default" ng-controller="NavCtrl">
    <ul class="nav navbar-nav">
      <li ><a href="/#/home">Medicos</a></li>
      <li ><a href="/#/home">Home</a></li>
    </ul>

    <div class="pull-right">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>Welcome {{currentUser()}}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </div>
  </nav>

  <div class="row">
    <div class="col-md-12 medicos-body">
      <div class="medicos-header-text">
      Medicos helps you connect with your psychotherapist easily, whenever, whereever. <br>
      <a>Read articles</a>, <a>Take part in discussions</a>, <a>Become a part of communities</a>; seek & receive help easily.
      <div>

        <!-- Insert html view templates here -->
          <ui-view></ui-view>

    </div>
  </div>

<!--_________________________________________________________________________-->

  <script type="text/ng-template" id="/home.html">
      <div>
        {{test}}
      </div>
      <div class="col-md-12 medicos-rowBg">
        <div ng-repeat="physician in listOfPhysicians">
          <br>
          <div class="row">
            <span class="medicos-doctor">
              <a ng-show="physician.username" href="{{physician.username}}">
                Dr. {{physician.username}}
              </a>
              <a ng-hide="physician.username">
                Dr. {{physician.username}}
              </a>
            </span>
          </div>
          <br>
        </div>
      </div>
    </script>

<!-- _________________________________________________________________________ -->

    <script type="text/ng-template" id="/posts.html">
      <div class="page-header">
        <h1>Medicos</h1>
      </div>

      <div ng-repeat="post in posts | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementUpvotes(post)"></span>
        {{post.upvotes}}
        <span style="font-size:20px; margin-left:10px;">
          <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span ng-hide="post.link">
            {{post.title}}
          </span>
        </span>

        <span ng-show="post.author">
          posted by <a>{{post.author}}</a> |
        </span>

        <span>
        <a href="#/posts/{{post._id}}">Comments</a>
        </span>
      </div>

      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
      </div>

      <form ng-submit="addPost()"
        ng-show="isLoggedIn()"
        style="margin-top:30px;">

        <h3>Add a new post</h3>

        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Title"
            ng-model="title"></input>
        </div>
        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Link"
          ng-model="link"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
    </script>

<!-- _________________________________________________________________________ -->

    <script type="text/ng-template" id="/aPost.html">
      <div class="page-header">
        <h3>
          <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span ng-hide="post.link">
            {{post.title}}
          </span>
        </h3>
      </div>

      <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
          {{comment.body}}
        </span>
      </div>
      <!-- post template -->

      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
      </div>

      <form ng-submit="addComment()"
        ng-show="isLoggedIn()"
        style="margin-top:30px;">
       <h3>Add a new comment</h3>

       <div class="form-group">
         <input type="text"
         class="form-control"
         placeholder="Comment"
         ng-model="body"></input>
       </div>
       <button type="submit" class="btn btn-primary">Post</button>
     </form>
    </script>
<!-- _________________________________________________________________________ -->

    <script type="text/ng-template" id="/register.html">
      <div class="page-header">
        <h1>Medicos</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()"
        style="margin-top:30px;">
        <h3>Register</h3>

        <br>
        Choose user type: <input type="radio" ng-model="user.type" value="patient" /> User
                          <input type="radio" ng-model="user.type" value="physician" /> Physician
        <br>
        <br>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>

        <span ng-show="isUserPhysician()">
            <div class="form-group">
              <input type="text"
              class="form-control"
              placeholder="Email"
              ng-model="user.email"></input>
            </div>

            <div class="form-group">
              <input type="text"
              class="form-control"
              placeholder="Contact Number/Phone Number"
              ng-model="user.contactNo"></input>
            </div>

            <div class="form-group">
              <select ng-model="speciality"
                ng-options="item as item.speciality for item in specialities"
                placeholder="Select Speciality"></select>
            </div>

            <div class="form-group">
              <input type="text"
              class="form-control"
              placeholder=""
              ng-model="user.registrationNo"></input>
            </div>
        </span>

        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>

      </form>
    </script>

<!-- _________________________________________________________________________ -->

    <script type="text/ng-template" id="/login.html">
      <div class="page-header">
        <h1>Medicos</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="logIn()"
        style="margin-top:30px;">
        <h3>Log In</h3>

        <br>
        Choose user type: <input type="radio" ng-model="user.type" value="patient" /> User
                          <input type="radio" ng-model="user.type" value="physician" /> Physician
        <br>
        <br>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </script>
<!-- _________________________________________________________________________ -->

</body>
</html>
